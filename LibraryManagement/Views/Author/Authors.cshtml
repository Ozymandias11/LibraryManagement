@model IEnumerable<LibraryManagement.ViewModels.Library.ViewModels.AuthorViewModel>

@{
    ViewData["Title"] = "Authors";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-center mb-3">
            <h2 class="text-primary mb-0">Authors</h2>
        </div>
        <table>
            <tr>
                <form method="get" action="Authors">
                <td style="padding-right:755px">
                </td>
                <td>
                    <input class="form-control" type="text" placeholder="Search for..." name="SearchString" value="@ViewData["CurrentSearchString"]" aria-label="Search" aria-describedby="btnNavbarSearch" />
                </td>
                <td>
                    <input type="hidden" name="sortBy" value="@ViewBag.SortBy" />
                    <input type="hidden" name="sortOrder" value="@ViewBag.SortOrder" />
                    <input style="margin-left: 10px;" type="submit" value="Search" class="btn btn-primary" />
                </td>
                </form>
            </tr>
        </table>
        <div class="table-responsive wide-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-primary text-center">
                            <a href="@Url.Action("Authors", new { sortBy = "FirstName", sortOrder = ViewBag.SortOrder == "FirstName_Asc" ? "FirstName_Desc" : "FirstName_Asc", SearchString = ViewData["CurrentSearchString"] })" class="text-primary">
                                First Name
                                @if (ViewBag.SortBy == "FirstName")
                                {
                                    @if (ViewBag.SortOrder == "FirstName_Asc")
                                    {
                                        <i class="fas fa-arrow-up"></i>
                                    }
                                    else if (ViewBag.SortOrder == "FirstName_Desc")
                                    {
                                        <i class="fas fa-arrow-down"></i>
                                    }
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th class="text-primary text-center">
                            <a href="@Url.Action("Authors", new { sortBy = "LastName", sortOrder = ViewBag.SortOrder == "LastName_Asc" ? "LastName_Desc" : "LastName_Asc", SearchString = ViewData["CurrentSearchString"] })" class="text-primary">
                                Last Name
                                @if (ViewBag.SortBy == "LastName")
                                {
                                    @if (ViewBag.SortOrder == "LastName_Asc")
                                    {
                                        <i class="fas fa-arrow-up"></i>
                                    }
                                    else if (ViewBag.SortOrder == "LastName_Desc")
                                    {
                                        <i class="fas fa-arrow-down"></i>
                                    }
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th class="text-primary text-center">
                            <a href="@Url.Action("Authors", new { sortBy = "DateOfBirth", sortOrder = ViewBag.SortOrder == "DateOfBirth_Asc" ? "DateOfBirth_Desc" : "DateOfBirth_Asc", SearchString = ViewData["CurrentSearchString"] })" class="text-primary">
                                Date of Birth
                                @if (ViewBag.SortBy == "DateOfBirth")
                                {
                                    @if (ViewBag.SortOrder == "DateOfBirth_Asc")
                                    {
                                        <i class="fas fa-arrow-up"></i>
                                    }
                                    else if (ViewBag.SortOrder == "DateOfBirth_Desc")
                                    {
                                        <i class="fas fa-arrow-down"></i>
                                    }
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th class="text-primary text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td class="text-center">@author.FirstName</td>
                            <td class="text-center">@author.LastName</td>
                            <td class="text-center">@author.DateOfBirth.ToShortDateString()</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-controller="Author" asp-action="UpdateAuthor" asp-route-id ="@author.AuthorId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal" data-author-id="@author.AuthorId" data-author-name="@($"{author.FirstName} {author.LastName}")">Delete</button>
                                </div>            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="CreateAuthor" class="btn btn-primary">Add Author</a>
        </div>
    </div>
</div>




@await Html.PartialAsync("_DeleteConfirmationModal", ("author-id", "author-name", "DeleteAuthor"))

@section Scripts {
    <script src="~/js/deleteModal.js"></script>
    <script>
        $.noConflict();
        jQuery(document).ready(function ($) {
            initializeDeleteModal('author-id', 'author-name');
        });
    </script>
}

