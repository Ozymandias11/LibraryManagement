@model string
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    bool isPaginated = ViewBag.IsPaginated ?? false;
}

<form method="get" action="@ViewData["ActionUrl"]">
    <td style="padding-right:755px"></td>
    <td>
        <input class="form-control" type="text" placeholder="@Localizer["SearchFor"]" name="SearchTerm" value="@Model"
               aria-label="@Localizer["Search"]" aria-describedby="btnNavbarSearch" />
    </td>
    <td>
        <input type="hidden" name="sortBy" value="@ViewBag.SortBy" />
        <input type="hidden" name="sortOrder" value="@ViewBag.SortOrder" />
        <input type="hidden" name="page" value="@ViewData["CurrentPage"]" />
        <input style="margin-left: 10px;" type="submit" value="@Localizer["Search"]" class="btn btn-primary" />
    </td>
</form>