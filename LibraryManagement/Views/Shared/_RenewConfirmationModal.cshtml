@model (string Id, string Name, string ActionName)


<div class="modal fade" id="renewModal" tabindex="-1" role="dialog" aria-labelledby="renewModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="renewModalLabel">Confirm Renew</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to renew the employee with email <strong id="itemName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="renewForm" method="post" asp-action="@Model.ActionName">
                    <input type="hidden" name="Id" id="itemId" value="" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Renew</button>
                </form>
            </div>
        </div>
    </div>
</div>