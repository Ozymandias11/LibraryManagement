@model LibraryManagement.ViewModels.Library.ViewModels.CreateBookCopyViewModel

<div class="modal fade" id="addQuantityModal" tabindex="-1" role="dialog" aria-labelledby="addQuantityModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addQuantityModalLabel">Add Book Copies</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Add copies for book: <strong id="bookTitle"></strong></p>
                <form id="addQuantityForm" method="post" asp-action="CreateBookCopy">
                    <input type="hidden" asp-for="SelectedBookId" />
                    <input type="hidden" asp-for="SelectedPublisherId" />
                    <input type="hidden" asp-for="SelectedRoomId" />
                    <input type="hidden" asp-for="SelectedShelfId" />
                    <input type="hidden" asp-for="NumberOfPages" />
                    <input type="hidden" asp-for="Edition" />
                    <input type="hidden" asp-for="Status" />
                    <div class="form-group">
                        <label asp-for="Quantity">Quantity to Add</label>
                        <input asp-for="Quantity" class="form-control" min="1" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="addQuantityForm" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>