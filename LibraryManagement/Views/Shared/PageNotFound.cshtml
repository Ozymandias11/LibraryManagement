@{
    ViewData["Title"] = "Page Not Found";
    ViewData["ShowNavbar"] = false;
}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1 class="display-1">Oops!</h1>
                <h2 class="display-4">404 Not Found</h2>
                <div class="error-details my-3">
                    Sorry, an error has occurred. The requested page was not found!
                </div>
                <div class="error-actions mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Take Me Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/NotFoundPage.css" />
}