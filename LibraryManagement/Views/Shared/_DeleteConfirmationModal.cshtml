@model (string Id, string Name, string ActionName)
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@Localizer["ConfirmDelete"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Localizer["AreYouSureDelete"] <strong id="itemName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="@Model.ActionName">
                    <input type="hidden" name="Id" id="itemId" value="" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</div>