@model IEnumerable<LibraryManagement.ViewModels.UserVeiwModel>

@{
    ViewData["Title"] = "Users";
}


<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card bg-secondary shadow border-0">
                <div class="card-body px-lg-5 py-lg-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="text-primary mb-0">Users</h2>
                        <a asp-action="AddAdmin" class="btn btn-primary">Add Admin</a>
                    </div>
                    <div class="table-responsive table-container">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <a href="@Url.Action("UsersForSuperAdmin", new { sortBy = "Email", sortOrder = ViewBag.SortOrder == "Email_Asc" ? "Email_Desc" : "Email_Asc" })" class="text-primary">
                                            Email
                                            @if (ViewBag.SortBy == "Email")
                                            {
                                                @if (ViewBag.SortOrder == "Email_Asc")
                                                {
                                                    <i class="fas fa-arrow-up"></i>
                                                }
                                                else if (ViewBag.SortOrder == "Email_Desc")
                                                {
                                                    <i class="fas fa-arrow-down"></i>
                                                }
                                            }
                                            else
                                            {
                                                <i class="fas fa-sort"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="text-center text-primary">Phone Number</th>
                                    <th class="text-center">
                                        <a href="@Url.Action("UsersForSuperAdmin", new { sortBy = "Roles", sortOrder = ViewBag.SortOrder == "Roles_Asc" ? "Roles_Desc" : "Roles_Asc" })" class="text-primary">
                                            Roles
                                            @if (ViewBag.SortBy == "Roles")
                                            {
                                                @if (ViewBag.SortOrder == "Roles_Asc")
                                                {
                                                    <i class="fas fa-arrow-up"></i>
                                                }
                                                else if (ViewBag.SortOrder == "Roles_Desc")
                                                {
                                                    <i class="fas fa-arrow-down"></i>
                                                }
                                            }
                                            else
                                            {
                                                <i class="fas fa-sort"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="text-center text-primary">Email Confirmed</th>
                                    <th class="text-center">
                                        <a href="@Url.Action("UsersForSuperAdmin", new { sortBy = "RegistrationDate", sortOrder = ViewBag.SortOrder == "RegistrationDate_Asc" ? "RegistrationDate_Desc" : "RegistrationDate_Asc" })" class="text-primary">
                                            Registration Date
                                            @if (ViewBag.SortBy == "RegistrationDate")
                                            {
                                                @if (ViewBag.SortOrder == "RegistrationDate_Asc")
                                                {
                                                    <i class="fas fa-arrow-up"></i>
                                                }
                                                else if (ViewBag.SortOrder == "RegistrationDate_Desc")
                                                {
                                                    <i class="fas fa-arrow-down"></i>
                                                }
                                            }
                                            else
                                            {
                                                <i class="fas fa-sort"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="text-center text-primary">Is Active</th>
                                    <th class="text-center text-primary">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="userTableBody">
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="text-center">@user.Email</td>
                                        <td class="text-center">@user.PhoneNumber</td>
                                        <td class="text-center">@user.Roles</td>
                                        <td class="text-center">@user.EmailConfirmed</td>
                                        <td class="text-center">@user.CreationDate</td>
                                        <td class="text-center">@(user.DeleteDate == null ? "True" : "False")</td>
                                        <td class="text-center">
                                            <a asp-action="DeleteUser" asp-route-Id="@user.Id" asp-route-email="@user.Email" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





