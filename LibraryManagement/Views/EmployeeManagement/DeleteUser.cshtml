@model LibraryManagement.ViewModels.UserVeiwModel;

@{
    ViewData["Title"] = "Delete User";
}
<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card bg-secondary shadow border-0">
                <div class="card-header bg-white pb-5">
                    <div class="text-center">
                        <h2 class="text-primary mb-0">Delete User</h2>
                    </div>
                </div>
                <div class="card-body px-lg-5 py-lg-5">
                    <div class="text-center mb-4">
                        <p>Are you sure you want to delete the user with email: <strong>@Model.Email</strong>?</p>
                    </div>
                    <form asp-action="DeleteUser" method="post">
                        <input type="hidden" name="userEmail" value="@Model" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg mr-4">Delete</button>
                            <a asp-action="Users" class="btn btn-neutral btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

