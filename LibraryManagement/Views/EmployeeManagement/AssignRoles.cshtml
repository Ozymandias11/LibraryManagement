@model LibraryManagement.ViewModels.AssignRoleViewModel
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-secondary shadow border-0">
                <div class="card-header bg-white pb-5">
                    <div class="text-center mb-3">
                        <h2 class="text-primary mb-0">Assign Roles to User</h2>
                        <p class="text-muted">Editing roles for user: <strong>@Model.Email</strong></p>
                    </div>
                </div>
                <div class="card-body px-lg-5 py-lg-5">
                    <form asp-action="AssignRoles" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <input type="hidden" name="cancelUrl" value="@Context.Request.Query["cancelUrl"]" />
                        <div class="form-group">
                            <div class="text-center mb-3">
                                <label class="font-weight-bold text-primary">Roles:</label>
                            </div>
                            <div class="d-flex flex-wrap justify-content-center">
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <div class="form-check mb-3 mr-4">
                                        <input type="checkbox" name="SelectedRoles" value="@role" class="form-check-input" @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                                        <label class="form-check-label">@role</label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SelectedRoles" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg mr-3">Assign Roles</button>
                            <a href="@ViewData["ReturnUrl"]" class="btn btn-neutral btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

