@model LibraryManagement.ViewModels.AssignRoleViewModel



<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-center mb-5">
            <h2 class="text-primary mb-0">Assign Roles to User</h2>
        </div>
        <form asp-action="AssignRoles" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <input type="hidden" name="cancelUrl" value="@Context.Request.Query["cancelUrl"]" />
            <div class="form-group d-flex flex-column align-items-center">
                <div class="d-flex justify-content-center text-primary mb-4">
                    <label class="font-weight-bold">Roles:</label>
                </div>
                <div class="d-flex flex-row justify-content-center">
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <div class="form-check mb-2 mr-4">
                            <input type="checkbox" name="SelectedRoles" value="@role" class="form-check-input" />
                            <label class="form-check-label">@role</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="SelectedRoles" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary mr-3">Assign Roles</button>
                <a href="@ViewData["ReturnUrl"]" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>