@model LibraryManagement.ViewModels.Library.ViewModels.PublisherViewModel

<div class="container-fluid mt--7">
    <div class="row justify-content-center">
        <div class="col-xl-10 order-xl-1">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-white border-0">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Publisher Information</h3>
                        </div>
                    </div>
                </div>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <div class="card-body">
                    <form id="publisher-form" asp-action="UpdatePublisher" asp-controller="Publisher" method="post">
                        <input type="hidden" asp-for="PublisherId" />
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group focused">
                                        <label class="form-control-label">Publisher Name</label>
                                        <div class="d-flex align-items-center">
                                            <p id="input-publisher-name" class="form-control form-control-alternative mb-0 mr-2 placeholder" contenteditable="false">@Model.PublisherName</p>
                                            <i class="fas fa-edit text-primary edit-icon" onclick="makeEditable('input-publisher-name')"></i>
                                            <input type="hidden" name="PublisherName" id="hidden-publisher-name" value="@Model.PublisherName" />
                                        </div>
                                        <span asp-validation-for="PublisherName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group focused">
                                        <label class="form-control-label">Phone Number</label>
                                        <div class="d-flex align-items-center">
                                            <p id="input-phone-number" class="form-control form-control-alternative mb-0 mr-2 placeholder" contenteditable="false">@Model.PhoneNumber</p>
                                            <i class="fas fa-edit text-primary edit-icon" onclick="makeEditable('input-phone-number')"></i>
                                            <input type="hidden" name="PhoneNumber" id="hidden-phone-number" value="@Model.PhoneNumber" />
                                        </div>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group focused">
                                        <label class="form-control-label">Email</label>
                                        <div class="d-flex align-items-center">
                                            <p id="input-email" class="form-control form-control-alternative mb-0 mr-2 placeholder" contenteditable="false">@Model.Email</p>
                                            <i class="fas fa-edit text-primary edit-icon" onclick="makeEditable('input-email')"></i>
                                            <input type="hidden" name="Email" id="hidden-email" value="@Model.Email" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row justify-content-end">
                                <div class="col-auto">
                                    <button type="submit" id="saveButton" class="btn btn-success btn-lg mr-3">Save Changes</button>
                                    <a asp-controller="Publisher" asp-action="Publishers" class="btn btn-neutral btn-lg mr-3">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>