@model IEnumerable<LibraryManagement.ViewModels.Reports.PopularityReportViewModel>
@{
    ViewData["Title"] = "Popularity Report";
}
<div class="card">
    <div class="card-body">
        <h2 class="text-primary mb-3">Report</h2>
        <form id="reportForm" class="mb-3">
            <div class="row">
                <div class="col-md-3">
                    <label for="reportPeriod">Report Period:</label>
                    <select id="reportPeriod" name="reportPeriod" class="form-control" required>
                        <option value="">Select a period</option>
                        <option value="Range">Date Range</option>
                        <option value="Annual">Annual</option>
                    </select>
                </div>
                <div id="dateInputs" class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="startDate">Start Date:</label>
                            <input type="date" id="startDate" name="startDate" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label for="endDate">End Date:</label>
                            <input type="date" id="endDate" name="endDate" class="form-control">
                        </div>
                    </div>
                </div>
                <div id="yearInput" class="col-md-3" style="display: none;">
                    <label for="year">Year:</label>
                    <input type="number" id="year" name="year" class="form-control" min="2000" max="2099" step="1">
                </div>
                <div class="col-md-3 align-self-end">
                    <button type="submit" class="btn btn-primary">Generate Report</button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label for="reportType">Report Type:</label>
                    <select id="reportType" name="reportType" class="form-control" required>
                        <option value="">Select a type</option>
                        <option value="Books">Books</option>
                        <option value="Authors">Authors</option>
                        <option value="Publishers">Publishers</option>
                        <option value="Genres">Genres</option>
                    </select>
                </div>
            </div>
        </form>
        <div id="reportTable"></div>
        <form id="exportForm" method="post" action="@Url.Action("ExportAnnualReport", "Book")">
            <input type="hidden" name="startDate" />
            <input type="hidden" name="endDate" />
            <input type="hidden" name="year" />
            <input type="hidden" name="reportType" />
            <button type="submit" id="exportButton" class="btn btn-success" style="display: none;">Export to Excel</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Reports/popularity-report.js"></script>
}