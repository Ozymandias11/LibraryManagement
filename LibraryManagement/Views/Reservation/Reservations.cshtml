@model LibraryManagement.ViewModels.Library.ViewModels.PagedViewModel<LibraryManagement.ViewModels.Library.ViewModels.ReservationViewModel>

@{
    ViewData["Title"] = "Reservations";
    ViewData["ActionUrl"] = "Reservations";
    ViewData["ActionName"] = "Reservations";
    ViewData["CurrentPage"] = Model.MetaData.CurrentPage;
    var sortableColumns = new[]
    {
        ("ID", "CustomerPersonalID"),
        ("Checkout Time", "CheckoutTime"),
        ("Employee Email", "EmployeeEmail"),
    };
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-center mb-3">
            <h2 class="text-primary mb-0">Reservations</h2>
        </div>
        <table>
            <tr>
                @await Html.PartialAsync("_SearchForm", ViewData["CurrentSearchString"] as string)
            </tr>
        </table>
        <div class="table-responsive wide-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        @await Html.PartialAsync("_SortableHeader", sortableColumns)
                        <th class="text-primary text-center">Is Late</th>
                        <th class="text-primary text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var reservation in Model.Items)
                    {
                        <tr>
                            <td class="text-center">@reservation.CustomerPersonalID</td>
                            <td class="text-center">@reservation.CheckoutTime</td>
                            <td class="text-center">@reservation.EmployeeEmail</td>
                            <td class="text-center">@reservation.IsLate</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-controller="Reservation" asp-action="Details" asp-route-id="@reservation.ReservationId" class="btn btn-primary btn-sm mr-2">Details</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="CreateReservation" class="btn btn-primary">Add Reservation</a>
        </div>
        @await Html.PartialAsync("_Pagination", (
                 CurrentPage: Model.MetaData.CurrentPage,
                 TotalPages: Model.MetaData.TotalPages,
                 PageSize: Model.MetaData.PageSize,
                 TotalCount: Model.MetaData.TotalCount,
                 OrderBy: ViewBag.OrderBy,
                 SearchString: ViewData["CurrentSearchString"] as string,
                 ControllerName: ViewContext.RouteData.Values["controller"].ToString(),
                 ActionName: ViewContext.RouteData.Values["action"].ToString()
                 ))
    </div>
</div>
@await Html.PartialAsync("_DeleteConfirmationModal", ("reservation-id", "reservation-title", "DeleteReservation"))
@section Scripts {
    <script src="~/js/deleteModal.js"></script>
    <script>
        $.noConflict();
        jQuery(document).ready(function ($) {
            initializeDeleteModal('reservation-id', 'reservation-title');
        });
    </script>
}
