@model LibraryManagement.ViewModels.AssignRoleViewModel

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-center mb-3">
            <h2 class="text-primary mb-0">Assign Roles to User</h2>
        </div>
        <form asp-action="AssignRoles" method="post">
            <div class="form-group">
                <label class="text-primary">Roles:</label>
                <div class="d-flex flex-column">
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="SelectedRoles" value="@role" class="form-check-input" />
                            <label class="form-check-label">@role</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary mr-3">Assign Roles</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>