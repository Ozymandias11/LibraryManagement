
@model LibraryManagement.ViewModels.EmailTemplateViewModel;

<div class="row justify-content-center align-items-center min-vh-90">
    <div class="col-md-8">
        <div class="card border-primary" style="border-width: 5px; border-radius: 30px; background-color: #FCF7FF;">
            <div class="card-body">
                <h2 class="text-primary text-center">Edit Template</h2>
                <form asp-action="EditTemplate" asp-route-id="@Model.Id" method="post">
                    <div class="form-group">
                        <label for="TemplateName">Template Name</label>
                        <input type="text" class="form-control" id="fTemplateName" name="TemplateName" value="@Model.TemplateName">
                    </div>
                    <div class="form-group">
                        <label for="from">From</label>
                        <input type="text" class="form-control" id="from" name="From" value="@Model.From">
                    </div>
                    <div class="form-group">
                        <label for="to">To</label>
                        <input type="text" class="form-control" id="to" name="To" value="@Model.To">
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" id="subject" name="Subject" value="@Model.Subject">
                    </div>
                    <div class="form-group">
                        <label for="body">Body</label>
                        <textarea class="form-control" id="body" name="Body" rows="5">@Model.Body</textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="Templates" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>