@model LibraryManagement.ViewModels.UserVeiwModel

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="profile-head">
                    <div class="text-right">
                        <a asp-controller="EmployeeManagement" asp-action="AssignRoles" asp-route-Id="@Model.Id" class="btn btn-primary">Reassign a role</a>
                    </div>
                    <div class="profile-info">
                        <div class="row">
                            <div class="col-md-6">
                                <label>First Name</label>
                            </div>
                            <div class="col-md-6">
                                <p id="user-email">@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Last Name</label>
                            </div>
                            <div class="col-md-6">
                                <p id="user-email">@Model.LastName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p id="user-email">@Model.Email</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Roles</label>
                            </div>
                            <div class="col-md-6">
                                <p id="user-roles">@Model.Roles</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Phone</label>
                            </div>
                            <div class="col-md-6">
                                <p id="user-phone">@Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <div class="form-group">
                        <label for="edit-email">Email</label>
                        <input type="email" class="form-control" id="edit-email" value="">
                    </div>
                    <div class="form-group">
                        <label for="edit-roles">Roles</label>
                        <input type="text" class="form-control" id="edit-roles" value="">
                    </div>
                    <div class="form-group">
                        <label for="edit-phone">Phone</label>
                        <input type="text" class="form-control" id="edit-phone" value="">
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $('#edit-profile').click(function () {
            $('#edit-email').val($('#user-email').text().trim());
            $('#edit-roles').val($('#user-roles').text().trim());
            $('#edit-phone').val($('#user-phone').text().trim());
            $('#editModal').modal('show');
        });

        $('#editForm').submit(function (e) {
            e.preventDefault();
            // Here you can add your AJAX call to submit the form data
            $('#user-email').text($('#edit-email').val());
            $('#user-roles').text($('#edit-roles').val());
            $('#user-phone').text($('#edit-phone').val());
            $('#editModal').modal('hide');
        });
    });
</script>


