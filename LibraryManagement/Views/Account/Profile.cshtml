@model LibraryManagement.ViewModels.UserVeiwModel

<div class="container-fluid mt--7">
    <div class="row justify-content-center">
        <div class="col-xl-8 order-xl-1">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-white border-0">
                    <div class="row align-items-center">
                        <div class="col-8">
                            @if(User.Identity.Name == Model.Email)
                            {
                                <h3 class="mb-0">My Account</h3>
                            }
                            <h3 class="mb-0">@Model.Email</h3>
                        </div>
                        <div class="col-4 text-right">
                           <a asp-controller="EmployeeManagement" asp-action="AssignRoles" asp-route-Id="@Model.Id" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-sm btn-primary">Reassign Roles</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form>
                        <h6 class="heading-small text-muted mb-4">User information  </h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group focused">
                                        <label class="form-control-label">First name</label>
                                        <p id="input-first-name" class="form-control form-control-alternative">@Model.FirstName</p>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group focused">
                                        <label class="form-control-label">Last name</label>
                                        <p id="input-last-name" class="form-control form-control-alternative">@Model.LastName</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Email address</label>
                                        <p id="input-email" class="form-control form-control-alternative">@Model.Email</p>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group focused">
                                        <label class="form-control-label">Roles</label>
                                        <p id="user-roles" class="form-control form-control-alternative">@Model.Roles</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4">
                        <!-- Address -->
                        <h6 class="heading-small text-muted mb-4">Contact information</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group focused">
                                        <label class="form-control-label">Phone</label>
                                        <p id="user-phone" class="form-control form-control-alternative">@Model.PhoneNumber</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-right">
                        <a asp-controller="EmployeeManagement" asp-action="Users" class="btn btn-neutral btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

