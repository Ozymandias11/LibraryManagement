@model LibraryManagement.ViewModels.VerificationViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Verify Code</h2>
                    <p class="card-text text-center">A verification code has been sent to your phone number. Please enter the code below to complete the registration process.</p>

                    <form asp-action="VerifyCode" method="post">
                        <div class="form-group">
                            <label for="EnteredCode">Verification Code</label>
                            <input type="text" class="form-control" id="EnteredCode" name="EnteredCode" required>
                        </div>

                        <input type="hidden" name="Id" value="@Model.Id" />

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        }

                        <button type="submit" class="btn btn-primary btn-block">Verify</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
